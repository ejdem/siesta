<%= form_for(@message) do |f| %>
  <%= render 'partials/errors', object: f.object %>
  <div>
      <%= f.text_field :title,   placeholder: "title...",              class: "form-control" %><br>
      <%= f.text_area  :message, placeholder: "write your message...", class: "form-control" %><br>
      <%= f.number_field :receiver_id %>
  </div>
  <%= f.submit "send", class: "btn btn-primary" %>
<% end %>