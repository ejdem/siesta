<%= form_for(@reply) do |f| %>
    <%= render 'partials/errors', object: @message %>
    <%= f.text_field :title,   placeholder: "title",      class:'form-control' %><br>
    <%= f.text_area  :message, placeholder: "message...", class:'form-control' %><br>
    <%= hidden_field_tag :receiver_id, @sender.id %>
    <%= hidden_field_tag :sender_id,   current_user.id %>
    <%= f.submit "send", class: "btn btn-primary form-control" %>
<% end %>