<div class="col-md-offset-3 col-md-6">  
<%= form_for(@micropost) do |f| %>
  <%= render 'partials/errors', object: @micropost %>
      <%= f.text_field :title,   placeholder: "title...",            class:'form-control' %><br>
      <%= f.text_area  :content, placeholder: "type new message...", class:'form-control' %>
      <%= hidden_field_tag :subject_id, @subject.id %>
  <%= f.submit "post", class: "btn btn-primary" %>
<% end %>
</div>