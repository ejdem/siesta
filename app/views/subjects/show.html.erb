<% provide(:title, "subject: "+@subject.name) %>
<div class="row">
    <div class="col-md-6">
        <h4><%= @subject.name %>, <%= @subject.ects %></h4><br>
        <p>subject id = <%= @subject.id %></p>
        <p>student id = <%= current_user.id %></p>
        <% if current_user.participating?( @subject.id) %>
          <p>you still not participate</p>
        <% else %>
          <p> you already participate!</p>
        <% end %>
        <p><%= @subject.description %></p>
        <%= link_to "subjects", subjects_path, class: "btn btn-primary pull-right" %>
        <% if !logged_in_tutor? && current_user.participating?(@subject)%>
        <%= render 'users/participate' %>
        <% end %>
        <% if logged_in_tutor? %>
        <%= link_to "edit", "#", class:"btn btn-primary pull-center" %>
    </div>
    <div class="col-md-6">
            <ul class="list-group">
            
            <% @subject.active_participations.each do |particip| %>
              <% u_id = particip.user_id %>
              <% u    = User.find(u_id) %>
              <li class="list-group-item"><%= link_to u.name, u %></li>
            </ul>
        </tr>
      <% end %>
        <% end %>
        <% if current_user.admin? && !current_user?(@user) %>
            <%= link_to "delete", @subject, method: :delete,
                                  class: "btn btn-danger  pull-center",
                                  data: { confirm: "are you sure?" } %>
        <% end %>
    </div>
</div>