<% provide(:title, @user.name) %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if !@user.tutor? %>
        <%= render 'participations' %>
      <% else %>
        <h3>good moring <%= @user.name %></h3><br>
      <% end %>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h4>your mail box:</h4>
        <%= render 'partials/messagesstats' %>
    </div>
    <% if !@user.tutor? && !@user.admin? %>
      <div class="col-md-6">
        <%= render 'notes/show' %>
      </div>
    <% end %>
  <div class="col-md-6">
    <% if @microposts.empty? %>
      <p> is empty</p>
    <% else %>
      <h4>you have added <%= @microposts.count %> posts</h4>
      <%= render @microposts %>
    <% end %>
  </div>
</div>