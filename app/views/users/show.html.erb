<% provide(:title, @user.name) %>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% if !@user.tutor? && !@user.admin? && current_user == @user %>
        <%= render 'notes/show' %>
      <% end %>
    </div>
</div>
<% if current_user == @user %>
<div class="row">
  <h4 class="center">your mail box:</h4>
  <%= render 'partials/messagesstats' %>
    <div class="col-md-6">
      <h4>messages received</h4>
        <% if @messages_r.empty? %>
          <p> you have no messages here</p>
        <% else %>
            <%= render 'messages/received' %>
        <% end %>
    </div>
    <div class="col-md-6">
      <h4>Messages sent:</h4>
        <% if @messages_s.empty? %>
          <p> you have no messages here</p>
        <% else %>
            <%= render 'messages/received' %>
        <% end %>
    </div>
</div>
<% end %>
<div class="row">
    <% if !@user.tutor? && !@user.admin?  %>
      <div class="col-md-6">
        <%= render 'participations' %>
      </div>
    <% end %>
  <div class="col-md-6">
  </div>
</div>