<% provide(:title, @user.name) %>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% if !@user.tutor? && !@user.admin? && current_user == @user %>
        <%= render 'notes/show' %>
      <% end %>
    </div>
</div>
<% if current_user == @user %>
<div class="row">
  <h4 class="text-center">your mail box:</h4>
    <div class="col-md-6">
      <h4>messages received(<%= @messages_r.count %>)</h4>
        <% if @messages_r.empty? %>
          <p> you have no messages here</p>
        <% else %>
            <%= render 'messages/received' %>
        <% end %>
    </div>
    <div class="col-md-6">
      <h4>Messages sent(<%= @messages_s.count %>)</h4>
        <% if @messages_s.empty? %>
          <p> you have no messages here</p>
        <% else %>
            <%= render 'messages/sent' %>
        <% end %>
    </div>
</div>
<div class="row">
  <div class="col-md-8">
    <p>compose new message here:</p>
    <%= render 'messages/new' %>
  </div>
</div>
<% end %>
