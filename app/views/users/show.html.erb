<% provide(:title, @user.name) %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if !@user.tutor? %>
        <%= render 'participations' %>
      <% else %>
        <p>good moring mister <%= @user.name %></p>
      <% end %>
    </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if !@user.tutor? && !@user.admin? %>
      <%= render 'notes/show' %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <p>your posts box</p>
    <% if @microposts.empty? %>
      <p> is empty</p>
    <% else %>
      <%= render @microposts %>
    <% end %>
  </div>
</div>